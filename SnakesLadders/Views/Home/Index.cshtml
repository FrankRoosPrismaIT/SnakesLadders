@{
    ViewBag.Title = "Snakes and Ladders";
}

<div class="board">
    <div class="player player-1 row-1 col-1" data-player="0"><div class="pawn"></div></div>
    <div class="player player-2 row-1 col-1" data-player="1"><div class="pawn"></div></div>
    <div class="player player-3 row-1 col-1" data-player="2"><div class="pawn"></div></div>
    <div class="player player-4 row-1 col-1" data-player="3"><div class="pawn"></div></div>
</div>
<div class="players">
    <input id="player-1" type="radio" name="player" data-player="0" checked="checked" />
    <input id="player-2" type="radio" name="player" data-player="1" />
    <input id="player-3" type="radio" name="player" data-player="2" />
    <input id="player-4" type="radio" name="player" data-player="3" />
    <div class="player player-1" data-player="0"><label for="player-2" onclick="roll(0);">
            Player 1
        </label></div><div class="player player-2" data-player="1"><label for="player-3" onclick="roll(1);">
        Player 2
    </label></div><div class="player player-3" data-player="2"><label for="player-4" onclick="roll(2);">
        Player 3
    </label></div><div class="player player-4" data-player="3"><label for="player-1" onclick="roll(3);">
        Player 4
    </label></div></div>
<div class="end">Player <span id="winner"></span> has won.</div>

@section Scripts {
    <script src="~/Scripts/snakes-ladders.js"></script>
}